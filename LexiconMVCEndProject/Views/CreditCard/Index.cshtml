@model List<CreditCard>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="mt-3">Creditcards</h4>

<table class="table table-striped table-fit table-bordered table-hover">
    <thead>
        <tr>
            <th>Creditcard Id</th>
            <th>Owner: First Name</th>
            <th>Owner: Last Name</th>
            <th>Creditcard number</th>
            <th>CCV number</th>
            <th>Bank</th>
            <th>Saldo</th>
            <th>Details/Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var creditCard in Model)
        {
            <tr>
                <td>@creditCard.CCId</td>
                <td>@creditCard.Customer.FirstName</td>
                <td>@creditCard.Customer.LastName</td>
                <td>@creditCard.CreditNumber</td>
                <td>@creditCard.CCV</td>
                <td>@creditCard.Bank</td>
                <td>@creditCard.Value</td>
                <td><a href="CreditCard/CreditCardDetails/@creditCard.CCId" class="btn btn-primary"> Details </a> <a href="CreditCard/EditCreditCard/@creditCard.CCId" class="btn btn-primary"> Edit </a> <a asp-action="DeleteCreditCard" asp-route-id="@creditCard.CCId" class="btn btn-danger"> Delete </a> </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="CreditCard" asp-action="AddCreditCard" class="btn btn-primary">Create Creditcard</a>
<a asp-controller="Customer" asp-action="Index" class="btn btn-primary">Go back</a>


