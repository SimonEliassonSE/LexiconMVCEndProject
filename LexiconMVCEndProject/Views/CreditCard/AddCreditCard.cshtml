
@model AddCreditCardViewModel

@{
    ViewData["Title"] = "Add Creditcard";
}

<div>
<h4 class="mt-5">Add new customer</h4>
@*<form method="post" action="AddCustomer" class="mt-5">*@
<form asp-controller="CreditCard" asp-action="AddCreditcard" method="post">
  <div class="form-group">
    <label asp-for="CreditNumber"></label>
    <input type="text" class="form-control" asp-for="CreditNumber" required>    
  </div>
    <div class="form-group">
    <label asp-for="CCV"></label>
    <input type="text" class="form-control" asp-for="CCV" required>    
  </div>
   <div class="form-group">
    <label asp-for="Bank"></label>
    <input type="text" class="form-control" asp-for="Bank" required>    
  </div>
   <div class="form-group">
    <label asp-for="Value"></label>
    <input type="text" class="form-control" asp-for="Value" required>    
  </div>
   <div class="form-group"> 
    <label class="col-lg-12">Creditcard owner</label>
    <select class ="col-lg-12" name="customerId" asp-items="ViewBag.Customers" required></select>
@*    <label for="">CustomerId</label>
    <input type="text" class="form-control" asp-for="CustomerId" required>    *@
  </div> 
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
 <a asp-controller="Customer" asp-action="Index" class="btn btn-primary mt-3">Go back</a>
</form>
<p></p>
    <div class="CreateCustomerTable mt-4">
        <table class="table table-striped table-fit table-bordered table-hover">
            <thead>
                <tr>
                    <th>Creditcard Id</th>
                    <th>Owner: First Name</th>
                    <th>Owner: Last Name</th>
                    <th>Creditcard number</th>
                    <th>CCV number</th>
                    <th>Bank</th>
                    <th>Saldo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var creditCard in Model.Creditcards)
                {
                <tr>
                    <td>@creditCard.CCId</td>
                    <td>@creditCard.Customer.FirstName</td>
                    <td>@creditCard.Customer.LastName</td>
                    <td>@creditCard.CreditNumber</td>
                    <td>@creditCard.CCV</td>
                    <td>@creditCard.Bank</td>
                    <td>@creditCard.Value</td>
                        @*<td><a href="Customer/CustomerDetails/@creditCard.CustomerId" class="btn btn-primary"> Details </a> <a href="Customer/EditCustomer/@creditCard.CustomerId" class="btn btn-primary"> Edit </a> <a asp-action="DeleteCustomer" asp-route-id="@creditCard.CustomerId" class="btn btn-danger"> Delete </a> </td>*@
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>