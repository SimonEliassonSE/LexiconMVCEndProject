@model AddCreditCardViewModel

@{
    ViewData["Title"] = "Edit Creditcard";
}

<h4 class="mt-3"> Edit Customer</h4>
<form method="post" action="EditCreditCard" class="mt-5">
  <div class="form-group">
    <label for="" class="form-label">Creditcard ID</label>
    <input type="text" class="form-control" asp-for="CCId" readonly="readonly">    
  </div>
  <div class="form-group">
    <label for="" class="form-label">Creditcard number</label>
    <input type="text" class="form-control" asp-for="CreditNumber" required>    
  </div>
    <div class="form-group">
    <label asp-for="CCV"></label>
    <input type="text" class="form-control" asp-for="CCV" required>    
  </div>
    <div class="form-group">
    <label for="" class="form-label">Bank</label>
    <input type="text" class="form-control" asp-for="Bank" required>    
  </div>
    <div class="form-group">
    <label for="" class="form-label">Saldo</label>
    <input type="text" class="form-control" asp-for="Value" required>    
  </div>
    <div class="form-group"> 
    <label class="col-lg-12">Creditcard owner</label>
    <select class ="col-lg-12" name="customerId" asp-items="ViewBag.Customers" required></select>
  </div> 
  
    
  <button type="submit" class="btn btn-primary mt-3">Submit</button>  <a asp-controller="Customer" asp-action="Index" class="mt-3 btn btn-primary"> Go back </a>
</form>