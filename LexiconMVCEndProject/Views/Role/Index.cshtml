@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>List of roles</h1>

<a asp-action="Create" class="btn btn-primary">Create new role</a>
<a asp-action="AddUserToRole" class="btn btn-primary">Add user to role</a>


<table class="table table-striped table-fit table-hover">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                CRUD
            </th>
        </tr>
    </thead>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>
                @if (role.Name != "User" && role.Name != "Admin")
                {
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">Delete role</a>
                }
              @*<a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger  style="pointer-events:none"">Delete role</a>*@ 
           </td>
        </tr>
    }
</table>