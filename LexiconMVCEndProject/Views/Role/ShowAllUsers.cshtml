@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "ShowAllUsers";
}

<h1>Show all users</h1>

<table  class="table table-striped table-fit table-hover">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Username
            </th>
            <th>

            </th>
        </tr>
    </thead>
    @foreach(var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>
                <a asp-action="ShowUserRoles" asp-route-id="@user.Id" class="btn btn-primary">Check roles</a>
            </td>
        </tr>
    }
</table>

