@model Category

@{
    ViewData["Title"] = "Products in category";

}

<h4 class="mt-3">Products in category</h4>

<table class="table table-striped table-fit table-bordered table-hover">
    <thead>
        <tr>
            <th>Category Id: </th>
            <th>Category Name: </th>
            <th>Product Id: </th>
            <th>Product Name: </th>
            <th>Price: </th>
            <th>Brand: </th>
        </tr>
    </thead>
    <tbody>
        @*@for (int i = 1; i < Model.Products.Count(); i++)*@
        @if(Model.Products == null)
        {
            <tr>
                <td>@Model.CategoryId</td>
                <td>@Model.Name</td>
                <td><h5>No item connected to this categori</h5></td>                
            </tr>
            
        }
        @if(Model.Products != null)
        {
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@Model.CategoryId</td>
                    <td>@Model.Name</td>
                    <td>@item.ProductId</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Brand</td>
                </tr>      
            }
            @*@for (int i = 1; i < Model.Products.Count(); i++)
            {
                <tr>
                    <td>@Model.CategoryId</td>
                    <td>@Model.Name</td>
                    <td>@Model.Products[i].ProductId</td>
                    <td>@Model.Products[i].Name</td>
                    <td>@Model.Products[i].Price</td>
                    <td>@Model.Products[i].Brand</td>
                </tr>           
            } 
*@        }

    </tbody>
</table>
