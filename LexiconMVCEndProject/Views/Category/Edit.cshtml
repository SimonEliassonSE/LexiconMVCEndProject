@model Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit category</h1>

<form asp-action="Edit">

  
       <div class="mb-3">
        <label class="col-sm-2 col-sm-label">Category ID</label>
        <div class="col-sm-10">
            <input type="number" class="form-control form-control-sm" asp-for="CategoryId" readonly />
        </div>
    </div>

    <div class="mb-3">
        <label class="col-sm-2 col-sm-label" >Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" asp-for="Name" />
        </div>
    </div>

    <div class="mb-3">
        <label class="col-sm-2 col-sm-label" >Description</label>
        <div class="col-sm-10">
            <input type="text" class="form-control form-control-sm" asp-for="Description" />
        </div>
    </div>

    <div>
        <input class="btn btn-primary" type="submit" value="Edit">
        <a class="btn btn-outline-dark" asp-action="Index">Return to table</a>
    </div>

</form>
