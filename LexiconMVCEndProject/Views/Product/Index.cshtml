@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="mt-3">Products</h4>

<table class="table table-striped table-fit table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>CategoryID</th>
            <th>Description</th>
            <th>IMG</th>
            <th>Name</th>
            <th>Price</th>
            <th>ProductSaldo</th>
         

        </tr>







<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.Brand</td>
            <td>@item.CategoryID</td>
            <td>@item.Description</td>
            <td>@item.IMG</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.ProductSaldo</td>



                <td class="text-center">
                                   <td><a href="Product/ProductDetails/@item.ProductId" class="btn btn-primary"> Details </a> <a href="Product/EditProduct/@item.ProductId" class="btn btn-primary"> Edit </a> <a asp-action="DeleteProduct" asp-route-id="@item.ProductId" class="btn btn-danger"> Delete </a> </td>

                </td>
        </tr>
    }
</tbody>