@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="mt-3">Products</h4>


<form action="Search" method="post">
    <input type="text" placeholder="Search.." name="name">
    <button type="submit" class="btn btn-success">Search</button>

</form>


<div>
    <a asp-controller="Product" asp-action="AddProducts" class="btn btn-success">Add new Product</a>

</div>
<table class="table table-striped table-fit table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>CategoryID</th>
            <th>Description</th>
            <th>IMG</th>
            <th>Name</th>
            <th>Price</th>
            <th>ProductSaldo</th>
         

        </tr>







<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.Brand</td>
            <td>@item.CategoryID</td>
            <td>@item.Description</td>
                <td><img src="@item.IMG" style="width:40%" /></td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.ProductSaldo</td>
                <td><a href="Product/ProductDetails/@item.ProductId" class="btn btn-primary"> Details </a></td>
                <td><a asp-action="EditProducts" asp-route-id="@item.ProductId" class="btn btn-success"> Edit </a></td>
                <td><a asp-action="DeleteProducts" asp-route-id="@item.ProductId" class="btn btn-danger"> Delete </a></td>
                <td>


                    <a action="AddProductToCart" href="CartItem/Index/@item.ProductId" class="btn btn-info"> Add to Cart</a>
                      
                </td>



                
        </tr>
    }
    
</tbody>
</table>
