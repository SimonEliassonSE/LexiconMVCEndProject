
@model List<Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="mt-3">Customers</h4>

<table class="table table-striped table-fit table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phonenumber</th>
            <th>Email</th>
            <th>Address</th>
            <th>ZipCode</th>
            <th>City</th>
            <th>Country</th>
            <th>Details/Edit/Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.CustomerId</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.PhoneNumber</td>
                <td>@person.Address</td>
                <td>@person.ZipCode</td>
                <td>@person.City</td>
                <td>@person.Country</td>
                <td>@person.Email</td>
                <td><a href="Customer/CustomerDetails/@person.CustomerId" class="btn btn-primary"> Details </a> <a href="Customer/EditCustomer/@person.CustomerId" class="btn btn-primary"> Edit </a> <a asp-action="DeleteCustomer" asp-route-id="@person.CustomerId" class="btn btn-danger"> Delete </a> </td>
            </tr>
@*            <a asp-action="" asp-route-id="@person.CustomerId" class="btn btn-success"> Edit </a>*@
        }
    </tbody>
</table>
<a asp-controller="Customer" asp-action="AddCustomer" class="btn btn-success">Add new user</a>

