@model UpdateCustomerViewModel

@{
    ViewData["Title"] = "Edit Customer";
}

<h4 class="mt-3"> Edit Customer</h4>
<form method="post" action="EditCustomer" class="mt-5">
  <div class="form-group">
    <label for="" class="form-label">ID</label>
    <input type="text" class="form-control" asp-for="CustomerId" readonly="readonly">    
  </div>
  <div class="form-group">
    <label for="" class="form-label">First Name</label>
    <input type="text" class="form-control" asp-for="FirstName" required>    
  </div>
    <div class="form-group">
    <label for="" class="form-label">Last Name</label>
    <input type="text" class="form-control" asp-for="LastName" required>    
  </div>
    <div class="form-group">
    <label for="" class="form-label">Phonenumber</label>
    <input type="text" class="form-control" asp-for="PhoneNumber" required>    
  </div>
    <div class="form-group">
    <label for="" class="form-label">Address</label>
    <input type="text" class="form-control" asp-for="Address" required>    
  </div>
    <div class="form-group">
    <label for="" class="form-label">ZipCode</label>
    <input type="text" class="form-control" asp-for="ZipCode" required>    
  </div>
    <div class="form-group">
    <label for="" class="form-label">City</label>
    <input type="text" class="form-control" asp-for="City" required>    
  </div>
  <div class="form-group">
    <label for="" class="form-label">Country</label>
    <input type="text" class="form-control" asp-for="Country" required>    
  </div>
  <div class="form-group">
    <label for="" class="form-label">Email</label>
    <input type="text" class="form-control" asp-for="Email" required>    
  </div>
    
  <button type="submit" class="btn btn-primary mt-3">Submit</button>  <a asp-controller="Customer" asp-action="Index" class="mt-3 btn btn-primary"> Go back </a>
</form>